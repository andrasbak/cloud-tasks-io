<!-- CloudTasksWidget.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:c='urn:import:com.google.gwt.cell.client' xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:t='urn:import:com.cloudtasks.client' xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

	<g:HTMLPanel>
		<div id="container">
			<div id="android"></div>
			<div class="appname">Cloud Tasks<div class="balls"></div></div>
			<div class="roundrect">
				<div class="inputcell">
					<g:TextBox ui:field="taskInput" />
				</div>
				<div class="tasktable">
					<t:CloudTasksWidget.TasksTable
						ui:field="tasksTable" />
				</div>
				<div class="user"><g:Label ui:field="signin"/></div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
